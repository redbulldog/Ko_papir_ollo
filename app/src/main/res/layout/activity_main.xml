<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kovacszoltan.rock_scissors_paper.MainActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView_ember"
        android:background="@drawable/paper"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_szoveg1"
        android:text="A te választásod"
        android:textSize="30dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/imageView_ember"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView_robot"
        android:background="@drawable/rock"
        android:layout_below="@+id/textView_szoveg1"
        android:layout_alignLeft="@+id/imageView_ember"
        android:layout_alignStart="@+id/imageView_ember"
        android:layout_marginTop="31dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_szoveg2"
        android:text="A gép választása"
        android:textSize="30dp"
        android:layout_below="@+id/imageView_robot"
        android:layout_alignLeft="@+id/textView_szoveg1"
        android:layout_alignStart="@+id/textView_szoveg1"
        android:layout_marginTop="19dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_eredmeny"
        android:text="Eredmény: Ember: 0 Computer: 0"
        android:textSize="25dp"
        android:layout_below="@+id/textView_szoveg2"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_ko"
        android:text="KŐ"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_papir"
        android:text="papir"
        android:layout_alignBaseline="@+id/btn_ko"
        android:layout_alignBottom="@+id/btn_ko"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_ollo"
        android:text="Olló"
        android:layout_alignBaseline="@+id/btn_papir"
        android:layout_alignBottom="@+id/btn_papir"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

</RelativeLayout>
